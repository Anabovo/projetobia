<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetobia.CadastroFornecedor"
             BackgroundColor="#3C3B3B">

    <ScrollView>
        <StackLayout Padding="20" 
                     VerticalOptions="Center" 
                     HorizontalOptions="Center">

            <Label Text="Cadastro do Fornecedor" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   TextColor="Black"/>

            <Entry Placeholder="Nome do Fornecedor" 
                   x:Name="NomeFornecedorEntry"/>

            <Entry Placeholder="Telefone" 
                   x:Name="TelefoneEntry"/>

            <Entry Placeholder="E-mail" 
                   x:Name="EmailEntry"/>

            <Entry Placeholder="Tipo de Fornecimento" 
                   x:Name="TipoFornecimentoEntry"/>

            <Entry Placeholder="Quantidade" 
                   x:Name="QuantidadeEntry"/>

            <Entry Placeholder="CNPJ" 
                   x:Name="CnpjEntry"/>

            <Button Text="Feito" 
                    Clicked="OnFeitoButtonClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
