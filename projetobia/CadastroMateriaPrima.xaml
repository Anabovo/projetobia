<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetobia.CadastroMateriaPrima"
             BackgroundColor="LightGreen">
    <ScrollView>
        <StackLayout Padding="20" 
                     VerticalOptions="Center" 
                     HorizontalOptions="Center">

            <Label Text="Cadastro da Matéria Prima" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   TextColor="Black"/>

            <Entry Placeholder="Nome da Matéria Prima" 
                   x:Name="NomeMateriaPrimaEntry"/>

            <Entry Placeholder="Novo Código" 
                   x:Name="NovoCodigoEntry"/>

            <Entry Placeholder="Unidade" 
                   x:Name="UnidadeEntry"/>

            <Entry Placeholder="Quantidade" 
                   x:Name="QuantidadeEntry"/>

            <Entry Placeholder="Fornecedor" 
                   x:Name="FornecedorEntry"/>

            <Button Text="Feito" 
                    Clicked="OnFeitoButtonClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
